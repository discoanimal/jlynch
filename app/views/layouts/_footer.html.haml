%footer
  .container
    .row
      .col-md-4
        / %ul.list-unstyled.footer-links.pull-left
        / %li= link_to 'About', about_path
        / %li= link_to 'Team', team_path
        / %li= link_to 'Blog', blog_path
        / %li= link_to 'Contact', contact_path
        %ul.list-unstyled.footer-links.pull-left
          / %li= link_to 'Press', press_path
          / %li= link_to 'FAQ', faq_path
          %li= link_to 'Terms', terms_path
          %li= link_to 'Privacy', privacy_path
        .clearfix
      .col-md-4
        %h3 SPREAD THE NEWS
        %p Share this awesome news to your friends
        %ul.list-inline.social-icons
          %li
            %a.facebook-bg{:href => "#"}
              %i.fa.fa-facebook
          %li
            %a.twitter-bg{:href => "#"}
              %i.fa.fa-twitter
          %li
            %a.googleplus-bg{:href => "#"}
              %i.fa.fa-google-plus
      .col-md-4
        %h3 GET UPDATED
        %p Receive regular updates about our product and special events
        %form.newsletter-form{:method => "POST"}
          .input-group.input-group-lg
            %input.form-control{:name => "email", :placeholder => "youremail@domain.com", :type => "email"}
              %span.input-group-btn
                %button.btn.btn-primary{:type => "button"}
                  %i.fa.fa-spinner.fa-spin
                  %span SUBSCRIBE
          .alert
    %p.copyright &copy;2014 The Develovers. All Rights Reserved
